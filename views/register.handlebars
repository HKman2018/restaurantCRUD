<div class="row mt-5 ">
  <div class="col-md-4 m-auto">
    <div class="card card-body register-warp">
      <h1 class="text-center mb-3 register-form" style="color:#33b5e5;">
        Register
      </h1>
      {{> messages}}
      <form action="/users/register" method="POST">
        <div class="form-group register-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name" value="{{{name}}}" />
        </div>
        <div class="form-group register-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="{{{email}}}" />
        </div>
        <div class="form-group register-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Create Password"
            value="{{{password}}}" />
        </div>
        <div class="form-group register-group">
          <label for="password2">Confirm Password</label>
          <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="{{{password2}}}" />
        </div>
        <button type="submit" id="register" class="btn btn-primary btn-block">
          REGISTER
        </button>
      </form>
      <p class="lead mt-4">Have An Account?</p>
      <a href="/users/login" id="register-login-btn">Login</a>
    </div>
  </div>
</div>