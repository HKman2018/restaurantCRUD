<form action="/restaurants" method="POST">
  <div class="container ">
    <h1 class="text-center mb-3"><span>新增餐廳</span></h1>
    <div class="row d-flex justify-content-between">
      <div class=" restaurantName  col-md-6 form-group  border-bottom  mr-2">
        <label for="name" class="sr-only  ">name</label>
        <input type="text" class="form-control border-0" id="inputPassword2" name="name" placeholder="請輸入餐廳中文名字"
          required>
      </div>
      <div class="restaurantName  col-md-5 form-group  border-bottom ">
        <label for="name_en" class="sr-only">name</label>
        <input type="text" style="ime-mode:active" name="name_en" class="form-control border-0" id="name_en"
          placeholder="請輸入餐廳英文名字" required>
      </div>
      <div class="restaurantName  col-md-5 form-group  border-bottom ">
        <label for="phone" class="sr-only">phone</label>
        <input class="form-control border-0" id="telNo" name="phone" type="tel" pattern="[0-9]{2} [0-9]{4} [0-9]{4}"
          placeholder="請輸入電話號碼:xx-xxxx-xxxx" required>

      </div>
      <div class="restaurantName col-md-12 form-group border-bottom ">
        <label for="address" class="sr-only">address</label>
        <input type="text" class="form-control border-0" name="location" id="address" placeholder="請輸入中文地址" required>
      </div>
      <div class="restaurantName col-md-12 form-group border-bottom ">
        <label for="google_map" class="sr-only">google map</label>
        <input type="url" class="form-control border-0" id="address" name="google_map"
          placeholder="請輸入Google Map : 'https://goo.gl/maps/'" required>
      </div>
      <div class="restaurantPhoto col-md-12 form-group border-bottom ">
        <label for="image" class="sr-only">image</label>
        <input type="url" class="form-control border-0" name="image" id="image" placeholder="請輸入photo : http://"
          required>
      </div>
      <div class="row form-group ">
        <legend class="col-md-12">餐廳種類</legend>
        <div class="col-md-12 ">
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="中華料理">中華料理
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="中東料理">中東料理
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="日本料理">日本料理
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="義式餐廳">義式餐廳
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="美式">美式
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="酒吧">酒吧
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="咖啡">咖啡
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="甜點">甜點
            </label>
          </div>
        </div>
      </div>
      <div class="restaurantRate col-md-2 form-group border-bottom m-3 mb-4 ">
        <label for="rating" class="sr-only">rating</label>
        <input type="number" step="0.1" name="rating" class=" form-control border-0 text-danger" id="rating" min="0"
          max="5" placeholder="評分為" requireds>
      </div>
      <div class="restaurantPhoto col-md-12 mt-3">
        <textarea name="description" id="" cols="100" rows="4" placeholder="餐廳詳細介紹"></textarea>
      </div>
      <button type=" submit" class=" btn btn-primary  m-4">新增餐廳</button>
    </div>
  </div>
</form>