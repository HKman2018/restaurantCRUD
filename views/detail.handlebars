<div class="container">
  <h1 class=" restaurant-show-title" ">{{{restaurant.name}}}</h1>
  <img class=" rounded mx-auto d-block mb-4 w-100" src="{{{restaurant.image}}}" alt="{{{restaurant.name}}}"
    style="max-width: 600px;">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-utensils pr-2"></i>
            類別：
          </span>
          {{{restaurant.category}}}
        </p>

        <p class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt pr-2"></i>
            地址：
          </span>
          {{{restaurant.location}}}
          <a href="{{{restaurant.google_map}}}" class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow pr-2 fa-xs"></i>
          </a>
        </p>

        <p class="mb-3">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt pr-2"></i>
            電話：
          </span>
          {{{restaurant.phone}}}
        </p>
        <p class="mb-1">
          <span class="text-secondary">介紹</span>
        </p>
        <p class="mb-5">
          {{{restaurant.description}}}
        </p>
        <div class="detail-btn mb-3">
          <a class="show-button btn btn-info" href="/">返回</a>
          <a class="edit-button btn btn-info" href="/restaurants/{{{restaurant.id}}}/edit">修改</a>
          <form action="/restaurants/{{{restaurant.id}}}/delete" method="POST" class="delete-btn">
            <button class="delete-button btn btn-info">刪除</button>
          </form>
        </div>
      </div>
    </div>
</div>