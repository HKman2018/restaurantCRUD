<form action="/restaurants/{{{restaurant.id}}}?_method=PUT" method="POST">
  <div class="container ">
    <h1 class="text-center mb-3"><span>編輯餐廳</span></h1>
    <div class="row d-flex justify-content-between">
      <div class=" restaurantName  col-md-6 form-group  border-bottom  mr-2">
        <label for="name" class="sr-only  ">name</label>
        <input type="text" class="form-control border-0" id="inputPassword2" name="name" placeholder="請輸入餐廳中文名字"
          value="{{{restaurant.name}}}">
      </div>
      <div class="restaurantName  col-md-5 form-group  border-bottom ">
        <label for="name_en" class="sr-only">name</label>
        <input type="text" style="ime-mode:active" required name="name_en" class="form-control border-0" id="name_en"
          placeholder="請輸入餐廳英文名字" value="{{{restaurant.name_en}}}">
      </div>
      <div class="restaurantName  col-md-5 form-group  border-bottom ">
        <label for="phone" class="sr-only">phone</label>
        <input class="form-control border-0" id="telNo" name="phone" type="tel" required
          pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}" placeholder="請輸入電話號碼:xx-xxxx-xxxx" value="{{{restaurant.phone}}}">

      </div>
      <div class="restaurantName col-md-12 form-group border-bottom ">
        <label for="address" class="sr-only">address</label>
        <input type="text" required class="form-control border-0" name="location" id="address" placeholder="請輸入中文地址"
          value="{{{restaurant.location}}}">
      </div>
      <div class="restaurantName col-md-12 form-group border-bottom ">
        <label for="google_map" class="sr-only">google map</label>
        <input type="url" required class="form-control border-0" id="address" name="google_map"
          placeholder="請輸入Google Map : 'https://goo.gl/maps/'" value="{{{restaurant.google_map}}}">
      </div>
      <div class="restaurantPhoto col-md-12 form-group border-bottom ">
        <label for="image" class="sr-only">image</label>
        <input type="url" required class="form-control border-0" name="image" id="image"
          placeholder="請輸入photo : http://" value="{{{restaurant.image}}}">
      </div>
      <div class="row form-group ">
        <legend class="col-md-12">餐廳種類</legend>
        <div class="col-md-12 ">
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="中華料理"
                {{#ifEquals restaurant.category '中華料理'}}{{/ifEquals}}>中華料理
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="中東料理"
                {{#ifEquals restaurant.category '中東料理'}}{{/ifEquals}}>中東料理
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="日本料理"
                {{#ifEquals restaurant.category '日本料理'}}{{/ifEquals}}>日本料理
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="義式餐廳"
                {{#ifEquals restaurant.category '義式餐廳'}}{{/ifEquals}}>義式餐廳
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="美式" {{#ifEquals restaurant.category '美式'}}{{/ifEquals}}>美式
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="酒吧" {{#ifEquals restaurant.category '酒吧'}}{{/ifEquals}}>酒吧
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="咖啡" {{#ifEquals restaurant.category '咖啡'}}{{/ifEquals}}>咖啡
            </label>
          </div>
          <div class="form-check d-inline">
            <label class="form-check-label">
              <input type="radio" name="category" value="甜點" {{#ifEquals restaurant.category '甜點'}}{{/ifEquals}}>甜點
            </label>
          </div>
        </div>
      </div>
      <div class="restaurantRate col-md-2 form-group border-bottom m-3 mb-4 ">
        <label for="rating" class="sr-only">rating</label>
        <input type="number" step="0.1" required name="rating" class=" form-control border-0 text-danger" id="rating"
          min="0" max="5" placeholder="評分為" value="{{{restaurant.rating}}}">
      </div>
      <div class="restaurantPhoto col-md-12 mt-3">
        <textarea name="description" id="" cols="100" rows="4" placeholder="餐廳詳細介紹"></textarea value="{{{restaurant.description}}}">
      </div>
      <button type=" submit" class=" btn btn-primary m-4 ">修改</button>
    </div>
  </div>

</form>